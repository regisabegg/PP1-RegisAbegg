@model PP1.CONTRATO.WEB.Models.CondicaoPagto.CondicaoPagtoVM
@using PP1.CONTRATO.WEB.Util

@{
    ViewBag.Title = "Remover registro";
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.action = ViewContext.Controller.ValueProvider.GetValue("action").RawValue.ToString().ToLower();
    ViewBag.readOnly = true;
}
<nav class="breadcrumb sl-breadcrumb">
    <a class="breadcrumb-item" href="@Url.Action("Index","Home")">Painel</a>
    <a class="breadcrumb-item" href="@Url.Action("Index","CondicaoPagto")">Condição Pagamento</a>
    <span class="breadcrumb-item active">Excluir</span>
</nav>

<div class="sl-pagebody">
    <div class="card pd-20 pd-sm-40">



        @using (Html.BeginForm())
        {
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h2>Excluir condição de pagamento</h2>
                <div class="form-horizontal">
                    @Html.RenderFlashMessage()
                    @Html.CustomValidationSummary(true, true, "Ocorreram alguns erros, por favor verifique!!", new { @class = "alert alert-danger", role = "alert" })

                    @Html.Partial("Form", Model)

                    <div class="alert alert-warning alert-dismissible" role="alert">
                        <h4>Aviso!</h4>
                        <p>@Html.Raw("Deseja realmente <b>EXCLUIR</b> esta forma de pagamento?")</p>
                        <p>
                            @Html.CustomButton(" Sim, excluir!", "submit", new { @class = "btn btn-danger", @style = "min-width:120px; margin-bottom:5px" }, new { @left = "ion-trash-a" })
                            <a href="@Url.Action("Index")" title="Volta para tela inicial" class="btn btn-secondary" style="min-width:120px; margin-bottom:5px"><span class="ion-arrow-left-a"></span> Não</a>
                        </p>
                    </div>
                </div>
            </div>


        }
    </div>
</div><!-- sl-pagebody -->